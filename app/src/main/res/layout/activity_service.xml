<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:background="@drawable/around"
    tools:context=".ServiceActivity">

    <TextView
        android:id="@+id/txt_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="28dp"
        android:text="Room Services .."
        android:textSize="12pt"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/txt_RoomID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="91dp"
        android:text="Room ID"
        android:textSize="9pt" />

    <EditText
        android:id="@+id/edt_RoomID"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="47dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/txt_TypeOfServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="163dp"
        android:text="TypeOfServices"
        android:textSize="9pt" />

    <Spinner
        android:id="@+id/spn_TypeServices"
        android:layout_width="181dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="186dp"
        android:layout_marginTop="154dp"
        android:entries="@array/spn_TypeServices" />

    <TextView
        android:id="@+id/txt_Items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="216dp"
        android:text="ITEMS"
        android:textSize="9pt" />

    <Spinner
        android:id="@+id/spn_Items"
        android:layout_width="179dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="191dp"
        android:layout_marginTop="213dp"
        android:entries="@array/spn_Items" />

    <TextView
        android:id="@+id/txt_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="275dp"
        android:text="Payment"
        android:textSize="9pt" />

    <RadioGroup
        android:id="@+id/radG_Payment"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="269dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radb_Cash"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:text="Cash" />

        <RadioButton
            android:id="@+id/radb_PayPal"
            android:layout_width="132dp"
            android:layout_height="37dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="282dp"
            android:layout_marginBottom="320dp"
            android:text="PayPal" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="205dp"
        android:text="Customer Note"
        android:textColor="@android:color/black"
        android:textSize="9pt" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="396dp"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="15dp"
        android:background="#0DA61E13"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Note Recommendation"
        android:inputType="textMultiLine" />


</RelativeLayout>

